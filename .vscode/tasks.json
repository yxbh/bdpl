{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format with Ruff",
            "type": "shell",
            "command": "ruff",
            "args": ["format", "."],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Lint with Ruff",
            "type": "shell",
            "command": "ruff",
            "args": ["check", "."],
            "problemMatcher": [
                {
                    "pattern": {
                        "regexp": "^([^:]+):(\\d+):(\\d+): ([EWF]\\d{3}) (.*)$",
                        "file": 1,
                        "location": 2,
                        "column": 3,
                        "code": 4,
                        "message": 5
                    },
                    "owner": "ruff"
                }
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
